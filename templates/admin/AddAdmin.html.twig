{% extends "./adminbase.html.twig" %}

{% block mainContent %}

    <div class="container" style="display:flex; flex-direction: justify-content; width:100%; height: 80vh; align-items: center;">
    <div class="card mt-10" style="margin-top:20px">

        <h1 class="mt-5" style="text-align:center">Ajout Admin</h1>
        <div class="container mt-5">
            {{ form_start(form, {'attr': {'class': 'row g-3 justify-content-center'}}) }}


 <div class="form-group col-md-5 mt-2">
                    {{ form_label(form.NomClient, 'Nom: ') }}
                    {{ form_widget(form.NomClient, {'attr': {'class': 'form-control bg-trasparent block border-secondary border-b-2 w-full h-20 text-6xl ouline-none'}}) }}
                </div>
                


            
                <div class="form-group col-md-5 mt-2">
                    {{ form_label(form.PrenomClient, 'Pr√©nom:') }}
                    {{ form_widget(form.PrenomClient, {'attr': {'class': 'form-control bg-trasparent block border-secondary border-b-2 w-full h-20 text-6xl ouline-none'}}) }}
                </div>



                <div class="col-md-5 mt-2">
                    <div class="custom-error-style">
                        {{ form_errors(form.NomClient) }}
                    </div>
                </div>

                <div class="col-md-5 mt-2">
                    <div class="custom-error-style">
                        {{ form_errors(form.PrenomClient) }}
                    </div>
                </div>



                <div class="form-group col-md-10 mt-2">
                    {{ form_label(form.email, 'Email:') }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control bg-trasparent block border-secondary border-b-2 w-full h-20 text-6xl ouline-none'}}) }}
                </div>


                <div class="col-md-10 mt-2">
                    <div class="custom-error-style">
                        {{ form_errors(form.email) }}
                    </div>
                </div>

            
                

                <div class="form-group col-md-10 mt-2">
                    {{ form_label(form.NumTel, 'NumTel:') }}
                    {{ form_widget(form.NumTel, {'attr': {'class': 'form-control bg-trasparent block border-secondary border-b-2 w-full h-20 text-6xl ouline-none'}}) }}
                </div>


                <div class="col-md-10 mt-2">
                    <div class="custom-error-style">
                        {{ form_errors(form.NumTel) }}
                    </div>
                </div>


                
        

                <div class="form-group col-md-10 mt-2">
                    {{ form_label(form.password, 'Mot de passe:') }}
                    {{ form_widget(form.password, {'attr': {'class': 'form-control bg-trasparent block border-secondary border-b-2 w-full h-20 text-6xl ouline-none'}}) }}
                </div>
                <div class="col-md-10 mt-2">
                    <div class="custom-error-style">
                        {{ form_errors(form.password) }}
                    </div>
                </div>
        
                

       
            
            <div class="text-center mb-4">
                <button type="submit" class="btn btn-primary" style="width: 200px;">Ajouter</button>
            </div>  

         

            {# Les autres champs du formulaire ici... #}

        

            {{ form_end(form) }}
        </div>

</div>
    


{% endblock %}