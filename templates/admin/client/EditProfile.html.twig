
{% extends 'AdminBase.html.twig' %}

{% block body %}
<div class="card">


    <div class="container mt-5">
        {{ form_start(form, {'attr': {'class': 'row g-3 justify-content-center'}}) }}

        <div class="col-md-5 mt-2">
            {{ form_row(form.NomClient) }}
        </div>

        <div class="col-md-5 mt-2">
            {{ form_row(form.PrenomClient) }}
        </div>

        <div class="col-md-10 mt-2">
            {{ form_row(form.email) }}
        </div>

        <div class="col-md-10 mt-2">
            {{ form_row(form.NumTel) }}
        </div>        
        
        <div class="col-md-10 mt-2">
            {{ form_row(form.NewPassword) }}
        </div>
        
        <div class="col-md-10 mt-2">
            {{ form_row(form.confirmNewPassword) }}
        </div>
        
        <div class="col-md-10 mt-3">
            {{ form_row(form.checkMeOut) }}
        </div>

        {# Les autres champs du formulaire ici... #}

        <div class="col-10 d-flex justify-content-end">
            {{ form_row(form.submit) }}
        </div>

        {{ form_end(form) }}
    </div>


</div>
{% endblock %}