{% extends "./AdminBase.html.twig" %}
{% block title %}Ajouter Category{% endblock %}

{% block mainContent %}
<h2 style="position: fixed; top: 0; left: 50%; transform: translateX(-50%); text-align: center; color: brown;">Ajouter Cat√©gorie</h2>


{% for flashMessage in app.flashes('success') %}
    <div class="alert alert-success" style="margin-top: 60px;">
        {{ flashMessage }}
    </div>
{% endfor %}

<div class="mt-5" style="overflow: auto; height: 80vh; width: 100%;">
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.titre) }}
        {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.description) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
    </div>
    <button type="submit" class="btn btn-success mt-3">Ajouter</button>
    {{ form_end(form) }}
    <p>
        <a href="{{ path('ajouterREEL') }}" class="btn btn-outline-warning mt-5">retour ajouter Reel</a>
        <a href="{{ path('ajouterPDF') }}" class="btn btn-outline-primary mt-5">retour ajouter PDF</a>
    </p>
</div>
{% endblock %}
