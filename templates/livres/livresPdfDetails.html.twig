{% extends 'base.html.twig' %}

{% block title %}Livre Details{% endblock %}
{% block stylesheets %}

    <link rel="stylesheet" href="{{ asset('css/livresReel.css') }}"> {# Link to your specific CSS file #}
{% endblock %}
{% block body %}
    <div class="">
    <div class="col-lg-8 border p-3 main-section bg-white">
        <div class="row hedding m-0 pl-3 pt-0 pb-3">
            
        </div>
        <div class="row m-0">
            <div class="col-lg-4 left-side-product-box pb-3">
                <img src={{ LivrePdf.UrlImage }} class="border p-3">
            </div>
            <div class="col-lg-8">
                <div class="right-side-pro-detail border p-3 m-0">
                    <div class="row">
                        <div class="col-lg-12">
                            <span>{{LivrePdf.titre}} by {{LivrePdf.auteur}}</span>
                            <p class="m-0 p-0">{{LivrePdf.langue}}</p>
                        </div>
                        <div class="col-lg-12">
                            <p class="m-0 p-0 price-pro">{{LivrePdf.prix}} DT</p>
                            <hr class="p-0 m-0">
                        </div>
                        <div class="col-lg-12 pt-2">
                            <h5>Livre details :   Rating : {{averageStars}}/5</h5>
                            <span>{{ LivrePdf.description }}</span>
                            <hr class="m-0 pt-2 mt-2">
                        </div>
                        <div class="col-lg-12">
                            <p class="tag-section"><strong>Tag : </strong><a href="">#</a><a href="">{{ LivrePdf.categorie }}</a></p>
                        </div>
                        <div class="col-lg-12 mt-3">
                            <div class="row">
                                <div class="col-lg-6 pb-2">
                                    <a href="{{ path('request_access', {'id': LivrePdf.id}) }}" class="btn btn-danger w-100">read it know</a>
                                </div>
                                <div class="col-lg-6">
                                    <a href="{{ path('app_mes_livres_pdf') }}" class="btn btn-info w-100">see other books</a>
                                </div>
                                            
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
            <section class="pb-4">
  <div class="border rounded-5">


<h2>Add your own feedback</h2>
{{ include('livres/_formCommantaire.html.twig') }}


<div class="w-full bg-white rounded-lg border p-2 my-4 mx-6">

        <h3 class="font-bold">Discussion</h3>

        <form>
        {% for commentaire in commentaires %}
            <div class="flex flex-col">
                <div class="border rounded-md p-3 ml-3 my-3">
                    <div class="flex gap-3 items-center">
                        <h3 class="font-bold">
                            {{ commentaire.IdClient }}
                        </h3>
                    </div>
                    <p class="text-gray-600 mt-2">
                        {{ commentaire.Contenue }}
                    </p>
                    <p class="text-gray-600 mt-2">
                     date : {{ commentaire.Date|date("d/m/Y H:i") }}  stars : {{ commentaire.Evaluation }}
                    </p>
                </div>
            </div>
        {% endfor %}
        </form>


    </div>


{% endblock %}


