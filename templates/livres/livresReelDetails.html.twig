{% extends "base.html.twig" %}

{% block title %}mes livres{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('css/livresReel.css') }}"> 
{% endblock %}

{% block body %}
  <div class="">
    <div class="col-lg-8 border p-3 main-section bg-white">
      <div class="row hedding m-0 pl-3 pt-0 pb-3">
        
      </div>
      <div class="row m-0">
        <div class="col-lg-4 left-side-product-box pb-3">
          <img src="{{ LivreReel.imageUrl }}" class="border p-3">
        </div>
        <div class="col-lg-8">
          <div class="right-side-pro-detail border p-3 m-0">
            <div class="row">
              <div class="col-lg-12">
                <span>{{ LivreReel.titre }} by {{ LivreReel.auteur }}</span>
                <p class="m-0 p-0">{{ LivreReel.langue }}</p>
              </div>
              <div class="col-lg-12">
                <p class="m-0 p-0 price-pro">{{ LivreReel.prix }} DT</p>
                <hr class="p-0 m-0">
              </div>
              <div class="col-lg-12 pt-2">
                <h5>Livre details : Â  Rating : {{averageStars}}/5</h5>
                <span>{{ LivreReel.description }}</span>
                <hr class="m-0 pt-2 mt-2">
              </div>
              <div class="col-lg-12">
                <p class="tag-section"><strong>Tag : </strong><a href="">#</a><a href="">{{ LivreReel.categorie }}</a></p>
              </div>
              <div class="col-lg-12 mt-3">
                <div class="row">
                  <div class="col-lg-6 pb-2">
                    <div hidden>
                      <form method="POST">
                        <button type="submit"   class="btn btn-success w-100" name="add_to_cart">Add To Cart</button>
                      </form>
                      </div>
                    <form method="POST">
                      <button type="submit"  class="btn btn-success w-100" name="add_to_cart">Add To Cart</button>
                    </form>
                    
                  </div>
                  <div class="col-lg-6">
                    <a href="{{ path('app_mes_livres_reel') }}" class="btn btn-info w-100">continue shopping</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
      </div>

      <section class="pb-4">
        <div class="border rounded-5">
          <h2>Add your own feedback</h2>
          {{ include('livres/_formCommantaire.html.twig') }}
          <div class="w-full bg-white rounded-lg border p-2 my-4 mx-6">
            <h3 class="font-bold">Discussion</h3>
            <form>
              {% for commentaire in commentaires %}
                <div class="flex flex-col">
                  <div class="border rounded-md p-3 ml-3 my-3">
                    <div class="flex gap-3 items-center">
                      <h3 class="font-bold">
                        {{ commentaire.IdClient }}
                      </h3>
                      <div class="star-rating">
                        {% for i in 1..5 %}
                          {% if i <= commentaire.Evaluation %}
                            <i class="fas fa-star"></i>
                          {% else %}
                            <i class="far fa-star"></i>
                          {% endif %}
                        {% endfor %}
                      </div>
                    </div>
                    <p class="text-gray-600 mt-2">
                      {{ commentaire.Contenue }}
                    </p>
                    <p class="text-gray-600 mt-2">
                      date : {{ commentaire.Date|date("d/m/Y H:i") }} 
                    </p>
                  </div>
                </div>
              {% endfor %}
            </form>
          </div>
        </div>
      </section>
       
    </div>
    
  </div>


  
{% endblock %}
